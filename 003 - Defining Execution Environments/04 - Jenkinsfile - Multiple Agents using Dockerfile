pipeline {
	agent none
    stages {
        stage('build java') {
		    agent { 
				dockerfile {
					dir '003 - Defining Execution Environments'
					filename '04 - Dockerfile - Multiple Agents using Dockerfile - Java'
				}
			}
            steps {
                sh 'mvn --version'
            }
        }
        stage('build node') {
		    agent { 
				dockerfile {
					dir '003 - Defining Execution Environments'
					filename '04 - Dockerfile - Multiple Agents using Dockerfile - Node'
				}
			}
            steps {
                sh 'npm --version'
            }
        }
    }
}